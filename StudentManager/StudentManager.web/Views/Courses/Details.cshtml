@model StudentManager.web.ViewModels.CourseViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />

    <div class="row">
        <div class="col-sm-4 text-righ">@Html.DisplayNameFor(model => model.Name)</div>
        <div class="col-sm-8">@Html.DisplayFor(model => model.Name)</div>

        <div class="col-sm-4 text-righ">@Html.DisplayNameFor(model => model.Year)</div>
        <div class="col-sm-8">@Html.DisplayFor(model => model.Year)</div>


        <div class="col-sm-4 text-righ">@Html.DisplayNameFor(model => model.Semester)</div>
        <div class="col-sm-8">@Html.DisplayFor(model => model.Semester)</div>

        <div class="col-sm-4 text-righ">@Html.DisplayNameFor(model => model.Credits)</div>
        <div class="col-sm-8">@Html.DisplayFor(model => model.Credits)</div>

    </div>
</div>
<p class="btn-group">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new{@class="btn btn-default"})
    @Html.ActionLink("Back to List", "Index","Courses","",new{@class="btn btn-default"})
</p>


<h4>Professors</h4>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Active
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model.Professor)
    {
        if (item.IsActive)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td class="btn-group">
                    @Html.ActionLink("Edit", "Edit","Professors", new { id = item.Id }, new{@class="btn btn-default"})
                    @Html.ActionLink("Details", "Details","Professors", new { id = item.Id }, new{@class="btn btn-default"})
                </td>
            </tr>
        }
    }

</table>

<h4>Students</h4>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>

        <th>
            Active
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model.Students)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>

            <td class="btn-group">
                @Html.ActionLink("Edit", "Edit","Student", new { id = item.Id }, new{@class="btn btn-default"})
                @Html.ActionLink("Details", "DetailsAsync", "Student", new { id = item.Id }, new{@class="btn btn-default"}) 
            </td>
        </tr>
    }

</table>

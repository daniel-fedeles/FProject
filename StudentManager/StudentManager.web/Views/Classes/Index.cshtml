@model IEnumerable<StudentManager.web.ViewModels.ClassViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>All classes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<h2>Active classes</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NrOfStudentsAllocated)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.IsActive)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NrOfStudentsAllocated)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                </td>
            </tr>
        }

    }

</table>
<h2>Inactive classes</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NrOfStudentsAllocated)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        if (!item.IsActive)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NrOfStudentsAllocated)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                </td>
            </tr>
        }

    }

</table>
